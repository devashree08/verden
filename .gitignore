schema_version: 1
tool: get_all_apps_score_by_user
temporal_scope: monthly_snapshot
last_updated: 2025-10-15
notes: >
  QRM score snapshot per VAST. If report_month is omitted at query-time,
  the proc returns the latest frozen month. Placeholder fields until SME review.

fields:
  - name: VastID
    type: int
    description: "Application VAST identifier."
    canonical_source: get_vast_general_by_user
    temporal_scope: non_snapshot
    also_available_in: [get_all_apps_value_by_user, get_vast_general_by_user]
    nullable: false

  - name: ReportMonth
    type: datetime
    description: "Month boundary for the snapshot (YYYY-MM-01 00:00:00)."
    canonical_source: get_all_apps_score_by_user
    temporal_scope: monthly_snapshot
    also_available_in: [get_all_apps_value_by_user]
    nullable: false

  - name: QRMScore
    type: decimal
    description: "Quantitative risk score for the application in the snapshot month."
    canonical_source: get_all_apps_score_by_user
    temporal_scope: monthly_snapshot
    also_available_in: []
    nullable: true
