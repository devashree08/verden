# Pick a Linux username to create (replace alice)
$User = "alice"

# Create user and give sudo
wsl -d Ubuntu -u root -- bash -lc "id -u $User >/dev/null 2>&1 || adduser $User"
wsl -d Ubuntu -u root -- usermod -aG sudo $User

# Make it the default user for this distro
wsl -d Ubuntu -u root -- bash -lc "printf '[user]\ndefault=%s\n' $User > /etc/wsl.conf"

# Restart the distro to apply default user
wsl --terminate Ubuntu
wsl -d Ubuntu
