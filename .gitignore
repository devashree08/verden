schema_version: 1
tool: get_all_apps_score_by_user
temporal_scope: monthly_snapshot
canonical_source: get_all_apps_score_by_user
notes: >
  QRM score snapshot per VAST. If ReportMonth is omitted at query-time,
  the proc returns the latest frozen month. Columns below are placeholders
  until SME-reviewed.

columns:
  - name: VastID
    type: int
    mssql_type: int
    bq_type: INT64
    description: Application VAST identifier.
    also_available_in:
      - get_all_apps_value_by_user
      - get_vast_general_by_user

  - name: ReportMonth
    type: datetime
    mssql_type: datetime
    bq_type: TIMESTAMP
    description: Month snapshot boundary (YYYY-MM-01 00:00:00).

  - name: QRMScore
    type: decimal
    mssql_type: decimal(38,6)
    bq_type: NUMERIC
    description: Quantitative risk metric for the application.

