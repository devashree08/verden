{
  "PortalLogging": {
    "Directory": "D:\\ProjectName\\Logs",
    "MinimumLevel": "Information"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "AppDb": "Server=...;Database=...;User Id=...;Password=...;"
  },
  "Auth": {
    "Headers": {
      "HeaderUserName": "pzid",
      "HeaderEid": "eid",
      "HeaderEmail": "email",
      "HeaderFirst": "firstName",
      "HeaderLast": "lastName",
      "AllowHeaderFallbackInDevelopment": true
    },
    "PolicyCache": {
      "Minutes": 5
    }
  }
}
