const wasOpenRef = React.useRef(false);
React.useEffect(() => {
  if (open && !wasOpenRef.current) {
    wasOpenRef.current = true;
    setTab(0);
    reloadCurrent();           // load "Current" once on open
  } else if (!open && wasOpenRef.current) {
    wasOpenRef.current = false;
  }
}, [open]); // <-- only depends on 'open'

// identity change while open -> refresh 'Current' silently (do NOT reset tab)
React.useEffect(() => {
  if (!open) return;
  reloadCurrent();
  // eslint-disable-next-line react-hooks/exhaustive-deps
}, [
  open,
  identity?.orgID,
  identity?.csf2SubcategoryID,
  identity?.maturityLevel,
  identity?.csf1SubcategoryID,
  identity?.attributeNum,
  identity?.customAttributeNum
]);
