def _sanitize_col(name: Optional[str], ordinal: int) -> str:
    # Some drivers may surface non-string names (e.g., int). Always cast to str.
    if name is None or name == "":
        return f"col{ordinal}"
    s = re.sub(r"\W+", "_", str(name))
    if re.match(r"^\d", s):
        s = f"col_{s}"
    return s or f"col{ordinal}"


def _pascal(s: str) -> str:
    s = re.sub(r"[^a-zA-Z0-9]+", " ", str(s))
    return "".join(w[:1].upper() + w[1:] for w in s.split() if w)


