"""
Sample reference RESOURCE for developers.

- Shows @mcp.resource usage
- Returns a tiny static doc developers can expand or replace
"""

from __future__ import annotations
from typing import Any, Dict

from fastmcp import mcp


@mcp.resource("doc://sample")
async def sample_doc() -> Dict[str, Any]:
    """
    Returns:
        A small JSON-ish document. In real code, you might pull structured text,
        JSON, or load YAML and convert to JSON for the client.
    """
    return {
        "title": "Sample Developer Doc",
        "purpose": "Demonstrate how to expose read-only resources over MCP.",
        "see_also": [
            "resources/describe_fields.py (field dictionaries)",
            "tools/sample_echo_tool.py",
            "prompts/sample_prompt.py",
        ],
    }
