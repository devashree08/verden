src/
  app/                                  # app shell + providers
    App.jsx
    routes.jsx
    providers/                          # QueryClientProvider, ThemeProvider, SnackbarProvider, etc.
    guards/                             # (optional) auth/role route guards

  assets/
    images/
    icons/
    fonts/

  lib/                                  # framework + low-level helpers (no feature logic)
    axiosClient.js


  theme/
    index.js                            # createTheme + component overrides

  layout/                              # site-wide chrome
    PrimaryLayout/
      Navbar.jsx
      Sidenav.jsx
      Footer.jsx
      index.jsx                        # exports PrimaryLayout

  ui/                                    # global, reusable UI (atomic)
    atoms/
      ButtonIcon/
      BadgeDot/
    molecules/
      ConfirmDialog/
      ToolbarSearch/
    organisms/
      DataTable/                         # generic table wrapper (if you abstract it)

    data/
      ExcelDownload/                     # reusable Excel helper (ExcelJS)
      csvExport.js                       # (legacy; keep until replaced)
    feedback/
      useToast.js
      BusyOverlay.jsx
    form/
      FieldSelect/
      FieldText/
    hooks/
      useDebounce.js
      useResponsive.js

  features/
    attributeMapping/                    # domain feature
      pages/
      api/
      components/
        atoms/
        molecules/
        organisms/
      utils/
      hooks/

    readiness/                           # (placeholder for another feature)
      pages/
      api/
      components/
        atoms/
        molecules/
        organisms/
      utils/
  index.jsx
