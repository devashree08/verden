[tool.pydocstyle]
convention = "google"
add-ignore = [
  "D100",  # missing docstring in public module
  "D104",  # missing docstring in public package (__init__.py)
  "D105",  # magic methods optional
  "D107",  # __init__ optional if class documented elsewhere
]
# Only check files outside tests/scripts
match = "(?!(tests|scripts)/).*\\.py"
