# pyproject.toml (repo root)
[tool.ruff]
line-length = 100
target-version = "py313"
extend-select = ["E","F","I","B","UP"]
exclude = [".venv"]

[tool.ruff.lint.per-file-ignores]
"tests/*" = ["D100","D101","D102","D103"]

[tool.pydocstyle]
convention = "google"
add-ignore = ["D105","D107"]
match = "(?!(tests|scripts)/).*\\.py"
