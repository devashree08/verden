      "params": [
        { "name": "UserId", "required": true },
        { "name": "AppIds", "required": false }
      ]
    },
    {
      "schema": "dbo",
      "proc": "spGetAppsByBU",
      "path": "/AllApps/GetAppsByBU",
      "method": "GET",
      "summary": "List apps by BU",
      "description": "Executes dbo.spGetAppsByBU(@BusinessUnitId, @Region).",
      "modelName": "GetAppsByBUModel",
      "params": [
        { "name": "BusinessUnitId", "required": true },
        { "name": "Region", "required": false }
      ]
    },
    {
      "schema": "dbo",
      "proc": "spGetAppsSummaryByUser",
      "path": "/Summary/GetAppsSummaryByUID",
      "method": "GET",
      "summary": "Summary metrics by user",
      "description": "Executes dbo.spGetAppsSummaryByUser(@UserId, @SinceMonth).",
      "modelName": "GetAppsSummaryByUserModel",
